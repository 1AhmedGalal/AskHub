@model AskHub.ViewModels.AnswerViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-action="Add" class="shadow-lg p-4 rounded" style="background-color: var(--secondary-color);">
                
                @if (ViewBag.Succeeded != null)
                {
                    <div class="alert alert-success text-center" role="alert" style="background-color: #d4edda; border-color: #c3e6cb;">
                        <h2 class="m-0">Question Was Answered</h2>
                    </div>
                }
                else
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Content" class="control-label" style="color: #333;"></label>
                        <textarea asp-for="Content" class="form-control"
                                  style="border-color: var(--primary-color); height: 150px; resize: vertical; overflow-y: auto;"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Add Answer" class="btn btn-primary btn-lg"
                               style="background-color: var(--primary-color); border-color: var(--primary-color);" />
                    </div>
                }
               
            </form>
            
        </div>
    </div>
</div>
