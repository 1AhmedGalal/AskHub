@model AskHub.ViewModels.UserUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-action="Update" class="shadow-lg p-4 rounded" style="background-color: var(--secondary-color);">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success text-center" role="alert" style="background-color: #d4edda; border-color: #c3e6cb;">
                        <h2 class="m-0">@ViewBag.Message</h2>
                    </div>
                }
                else
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label" style="color: #333;"></label>
                        <input asp-for="Password" type="password" class="form-control" style="border-color: var(--primary-color);" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmedPassword" class="control-label" style="color: #333;"></label>
                        <input asp-for="ConfirmedPassword" type="password" class="form-control" style="border-color: var(--primary-color);" />
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg" style="background-color: var(--primary-color); border-color: var(--primary-color);" />
                    </div>
                }
               
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
